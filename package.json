{
  "name": "video-client",
  "version": "0.2.2",
  "description": "一款PC端视频聚合应用，提供国内主流视频站资源。",
  "main": "app/main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "npm run ui-test",
    "model-test": "tsc -p . && electron-mocha --renderer built/test/model --enable-logging",
    "ui-test": "tsc -p . && nyc mocha built/test/ui && nyc report --reporter=json && codecov -f coverage/*.json",
    "package": "electron-forge package",
    "package-all": "electron-forge package -a x64 -p all",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "keywords": [
    "video",
    "client"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VideoClient/video-client.git"
  },
  "bugs": {
    "url": "https://github.com/VideoClient/video-client/issues"
  },
  "homepage": "https://github.com/VideoClient/video-client#readme",
  "email": "sunxfancy@gmail.com",
  "author": {
    "name": "sxf",
    "email": "sunxfancy@gmail.com",
    "url": "https://github.com/sunxfancy"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/chai-as-promised": "0.0.29",
    "@types/electron": "^1.4.31",
    "@types/material-ui": "^0.16.48",
    "@types/mocha": "^2.2.38",
    "@types/nedb": "0.0.31",
    "@types/react": "^15.0.5",
    "@types/react-dom": "^0.14.22",
    "@types/react-router": "^3.0.0",
    "@types/request": "0.0.39",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "codecov": "^1.0.1",
    "devtron": "^1.3.0",
    "dts-generator": "^2.0.0",
    "electron-forge": "^2.7.2",
    "electron-mocha": "^3.3.0",
    "electron-prebuilt-compile": "1.4.15",
    "electron-react-devtools": "^0.4.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.0",
    "spectron": "~3.4.1",
    "typescript": "^2.1.5"
  },
  "dependencies": {
    "electron-compile": "^5.1.3",
    "github-download": "^0.5.0",
    "material-ui": "^0.16.7",
    "nedb": "^1.8.0",
    "npm": "^4.1.2",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-html5video": "^1.4.0",
    "react-layout-components": "^3.0.1",
    "react-materialui-notifications": "^0.4.1",
    "react-router": "^3.0.2",
    "react-swipeable-views": "^0.10.3",
    "react-swipeable-views-utils": "^0.10.1",
    "react-tap-event-plugin": "^2.0.1",
    "request": "^2.79.0"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "zip",
          "squirrel"
        ],
        "darwin": [
          "zip",
          "dmg"
        ],
        "linux": [
          "zip",
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "ignore": [
          ".gitignore",
          "tsconfig.json"
        ]
      },
      "electronWinstallerConfig": {
        "iconUrl": "https://github.com/VideoClient/video-client/raw/master/app/icon/icon.ico",
        "setupIcon": "https://github.com/VideoClient/video-client/raw/master/app/icon/icon.ico"
      },
      "electronInstallerDebian": {
        "icon": "app/icon/icon.png",
        "categories": [
          "Video"
        ]
      },
      "electronInstallerRedhat": {
        "icon": "app/icon/icon.png",
        "categories": [
          "Video"
        ]
      },
      "electronInstallerDMG": {
        "icon": "app/icon/icon.ico",
        "icon-size": 64
      },
      "github_repository": {
        "owner": "VideoClient",
        "name": "video-client"
      },
      "windowsStoreConfig": {
        "packageName": ""
      }
    }
  }
}
