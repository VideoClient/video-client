{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "built/",
        "jsx": "react",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "typings/**/*.d.ts",
        "app/ts/**/*",
        "packages/**/*"
    ],
    "compileOnSave": false
}
