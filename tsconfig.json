{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "built/",
        "lib": ["dom", "es2017"],
        "jsx": "react",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        ".vscode",
        "built/",
        "node_modules/",
        "out/"
    ],
    "compileOnSave": false
}
